@{
  Layout = "_Layout";
}

@model GameTracker.Models.Platform

<h2>Platform Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This platform does not contain any games</p>
}
else
{
  <h4>Games the platform contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Game.Title</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a game", "AddGame", new { id = Model.PlatformId })</p>
<p>@Html.ActionLink("Back to platforms", "Index")</p>
<p>@Html.ActionLink("Edit Platform", "Edit", new { id = Model.PlatformId })</p>
<p>@Html.ActionLink("Delete Platform", "Delete", new { id = Model.PlatformId })</p>